@model IEnumerable<TourViewModel>

@{
    ViewData["Title"] = "Tours";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var tour in Model)
            {
                <tr>
                    <td>@tour.Id</td>
                    <td>@tour.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@tour.Id">View Details</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>