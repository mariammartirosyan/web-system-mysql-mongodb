@model IEnumerable<BookingViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<table class="table">
    <thead>
        <tr>
            <th>BookingDate</th>
            <th>Price</th>
            <th>TourId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingDate</td>
                    <td>@booking.Price</td>
                    <td>@booking.TourId</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Tour" asp-action="Details" asp-route-id="@booking.TourId">View Tour Details</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
